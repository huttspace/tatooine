{
  "name": "tatooine",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:path": "pathpida --ignorePath .gitignore --watch",
    "build": "prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json}'",
    "types": "tsc --noEmit",
    "db:generate": "prisma generate",
    "sb": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.10",
    "@chakra-ui/react": "^2.3.4",
    "@emotion/react": "^11.10.4",
    "@emotion/server": "^11.10.0",
    "@emotion/styled": "^11",
    "@hookform/resolvers": "^2.9.8",
    "@mantine/core": "^5.5.6",
    "@mantine/dates": "^5.5.6",
    "@mantine/form": "^5.5.6",
    "@mantine/hooks": "^5.5.6",
    "@mantine/modals": "^5.5.6",
    "@mantine/next": "^5.5.6",
    "@mantine/notifications": "^5.5.6",
    "@mantine/prism": "^5.5.6",
    "@mantine/spotlight": "^5.5.6",
    "@next-auth/prisma-adapter": "^1.0.4",
    "@prisma/client": "^4.3.1",
    "@tanstack/react-query": "^4.6.0",
    "@tanstack/react-query-devtools": "^4.10.1",
    "@trpc/client": "10.0.0-proxy-beta.7",
    "@trpc/next": "10.0.0-proxy-beta.7",
    "@trpc/react": "10.0.0-proxy-beta.7",
    "@trpc/server": "10.0.0-proxy-beta.7",
    "dayjs": "^1.11.5",
    "framer-motion": "^6",
    "nanoid": "^4.0.0",
    "next": "12.3.1",
    "next-auth": "^4.12.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.36.1",
    "superjson": "^1.10.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@chakra-ui/storybook-addon": "^4.0.11",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-interactions": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack4": "^6.5.12",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/manager-webpack4": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@storybook/testing-library": "^0.0.13",
    "@types/node": "18.7.20",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "babel-loader": "^8.2.5",
    "eslint": "8.57.1",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "lint-staged": "^13.0.3",
    "pathpida": "^0.18.1",
    "prettier": "^2.7.1",
    "prisma": "^4.3.1",
    "simple-git-hooks": "^2.8.0",
    "typescript": "4.8.3",
    "vitest": "^0.24.3"
  },
  "lint-staged": {
    "(src)/**/*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "prisma/schema.prisma": [
      "prisma format"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm types"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
